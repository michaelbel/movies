<?xml version="1.0" encoding="utf-8"?>

<!--
    Night Theme

    Android 5 (API level 21)
    Android 5.1 (API level 22)
-->

<resources>

    <style name="Theme.Base.Starting.V21" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_screen_animated_icon</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        <item name="windowSplashScreenBackground">@color/Background</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Movies</item>
        <item name="android:statusBarColor">@color/Background</item>
        <item name="android:navigationBarColor">@color/Background</item>
    </style>

    <style name="Theme.Movies.Starting" parent="Theme.Base.Starting.V21"/>

</resources>